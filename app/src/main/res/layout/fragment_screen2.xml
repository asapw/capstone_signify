<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.screen.Screen2"
    android:padding="16dp">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/screen2Lottie"
        android:layout_width="224dp"
        android:layout_height="216dp"
        android:layout_marginTop="130dp"
        app:lottie_url="https://lottie.host/5d2fe7db-e788-413f-8b4f-94fac87e21bb/QY25sHxnBB.lottie"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="With our step-by-step lessons and interactive exercises, learning sign language has never been easier. Start small and grow your skills every day!"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/primaryColor"
        app:layout_constraintTop_toBottomOf="@id/screen2Lottie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Next Button -->
</androidx.constraintlayout.widget.ConstraintLayout>
